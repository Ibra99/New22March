<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ibrahimalhassan.myapplication.MainActivity"
    android:background="@drawable/shaqra"
    android:theme="@style/Theme.AppCompat.Light"
    >


    <Button
        android:id="@+id/start"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/dean"
        android:layout_alignStart="@+id/dean"
        android:layout_below="@+id/dean"
        android:layout_marginTop="37dp"

        android:text="عمادة القبول والتسجيل"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="61dp" />


    <Button
        android:id="@+id/computer"
        android:layout_width="250dp"
        android:layout_height="40dp"


        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start"
        android:layout_marginBottom="19dp"
        android:text="كلية الحاسب"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="184dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ali" />

    <Button
        android:id="@+id/affair"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"

        android:text="شوؤن الطلاب"
        android:textAlignment="center"
        android:textSize="14sp" />


    <Button
        android:id="@+id/dean"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/affair"
        android:layout_alignStart="@+id/affair"
        android:layout_centerVertical="true"

        android:text="عمادة خدمة المجتمع" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:text="مشاركة" />

</RelativeLayout>

